<!doctype html>
<html lang="pt-br">

@model ProjetoSisConBens.Models.Unidade

@{
    ViewData["Title"] = "Unidade.Editar.";
}


<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/333b0ca1b3.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <title>SiCoBe\Unidades</title>

</head>



<body>
    <div class="container">

        <h4><strong>Editar a Unidade</strong></h4>
        <hr />

        <div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UnidadeId" />

                <div class="row">

                    <div class="col-sm-4">
                        <strong>
                            <label asp-for="UnidadeIdentificacao" class="control-label"></label>
                        </strong>
                        <input asp-for="UnidadeIdentificacao" class="form-control" />
                    </div>
                    <div class="col-sm-8">
                        <strong>
                            <label asp-for="UnidadeAtividades" class="control-label"></label>
                        </strong>
                        <input asp-for="UnidadeAtividades" class="form-control" />
                    </div>

                </div>

                <div class="row">
                    <div class="col-sm-5">
                        <strong>
                            <label asp-for="UnidadeEndereco" class="control-label"></label>
                        </strong>
                        <input asp-for="UnidadeEndereco" class="form-control" />
                    </div>
                    <div class="col-sm-2">
                        <strong>
                            <label asp-for="UnidadeBairro" class="control-label"></label>
                        </strong>
                        <input asp-for="UnidadeBairro" class="form-control" />
                    </div>
                    <div class="col-sm-2">
                        <strong>
                            <label asp-for="UnidadeCep" class="control-label"></label>
                        </strong>
                        <input asp-for="UnidadeCep" class="form-control" />
                    </div>
                    <div class="col.sm-3">
                        <strong>
                            <label asp-for="CidadeId" class="control-label"></label>
                        </strong>
                        <select asp-for="CidadeId" class="form-control" asp-items="ViewBag.CidadeId"></select>
                    </div>
                </div>

                <div class="form-group">
                    <br />
                    <strong>
                        <input type="submit" value="Gravar" class="btn btn-primary" /> |
                        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    </strong>
                </div>

            </form>
        </div>
    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>

</html>