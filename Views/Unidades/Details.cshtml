<!doctype html>
<html lang="pt-br">

@model ProjetoSisConBens.Models.Unidade

@{
    ViewData["Title"] = "Unidade.Detalhe.";
}

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/333b0ca1b3.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <title>SiCoBe\Unidades</title>

</head>



<body>
    <h4><strong>Detalhe da Unidade</strong></h4>
    <hr />

    <div class="container">

        <div>

            <dl class="row">


                <dt class="col-sm-2">
                    <strong>
                        @Html.DisplayNameFor(model => model.UnidadeIdentificacao)
                    </strong>
                    
                </dt>
                
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UnidadeIdentificacao)
                    <hr />
                </dd>

                <dt class="col-sm-2">
                    <strong>
                        @Html.DisplayNameFor(model => model.UnidadeAtividades)
                    </strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UnidadeAtividades)
                    <hr />
                </dd>
                <dt class="col-sm-2">
                    <strong>
                        @Html.DisplayNameFor(model => model.UnidadeEndereco)
                    </strong>
                </dt>
                <dd class="col-sm-10" >
                    @Html.DisplayFor(model => model.UnidadeEndereco)
                    <hr />
                </dd>
                <dt class="col-sm-2">
                    <strong>
                        @Html.DisplayNameFor(model => model.UnidadeBairro)
                    </strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UnidadeBairro)
                    <hr />
                </dd>
                <dt class="col-sm-2">
                    <strong>
                        @Html.DisplayNameFor(model => model.UnidadeCep)
                    </strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UnidadeCep)
                    <hr />
                </dd>
                <dt class="col-sm-2">
                    <strong>
                        @Html.DisplayNameFor(model => model.Cidade)
                    </strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cidade.CidadeNome)
                </dd>
                <hr />
            </dl>
        </div>
        <div>
            <strong>
                <a asp-action="Edit" asp-route-id="@Model?.UnidadeId" class="btn btn-primary">Editar</a> |
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </strong>
        </div>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
                integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
                crossorigin="anonymous">
        </script>
    </div>

</body>

</html>
