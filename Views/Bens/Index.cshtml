<!doctype html>
<HTML lang="pt-br">

@model IEnumerable<ProjetoSisConBens.Models.Bem>

@{
    ViewData["Title"] = "Bens.Index.";
}

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->

    <link href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/333b0ca1b3.js" crossorigin="anonymous"></script>

    <title>SiCoBe\Bens</title>
</head>


<body>

    <div class="container">
        <h4><strong>Relação de Bens</strong></h4>

        <p>
            <a asp-action="Create" class="btn btn-primary"><strong>Cadastrar novo</strong></a>
        </p>

        <table class="table" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BemDescricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BemDataaquisicao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BemValoraquisicao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BemStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BemDatastatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Unidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Inventario)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BemDescricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BemDataaquisicao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BemValoraquisicao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BemStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BemDatastatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Unidade.UnidadeAtividades)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Inventario.InventarioDescricao)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.BemId" class="btn btn-success"><strong>Editar</strong></a> |
                            <a asp-action="Details" asp-route-id="@item.BemId" class="btn btn-info"><strong>Detalhes</strong></a> |
                            <a asp-action="Delete" asp-route-id="@item.BemId" class="btn btn-danger"><strong>Excluir</strong></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</body>
</HTML>

@section Scripts {
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>
    <script>

        $(document).ready(function () {
            //            $('#table_id').DataTable();
            $('#myTable').DataTable();
        });
    </script>
}