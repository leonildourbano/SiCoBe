<!doctype html>
<html lang="pt-br">

@model ProjetoSisConBens.Models.Cargo

@{
    ViewData["Title"] = "Cargo.Cadastrar.";
}



<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <script src="https://kit.fontawesome.com/333b0ca1b3.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="https://cdn.datatables.net/1.13.2/js/jquery.dataTables.min.js" />
    <title>SiCoBe\Cargos</title>

</head>

<body>
    <h4><strong>Cadastro de Cargos</strong></h4>
    <hr />


    <div class="container">

        <form asp-action="Create" class="form-floating">

            <div class="row justify-content-md-center">
                <div class="col-sm-6">
                    <div>
                        <strong>
                            <label asp-for="CargoDescricao" class="control-label"></label>
                        </strong>
                        <select asp-for="CargoDescricao" class="form-control">
                            <option selected>--- selecione ---</option>
                            <option>Diretor(a)</option>
                            <option>Secretário(a)</option>
                            <option>Presidente</option>
                            <option>Auxiliar Serviços Gerais</option>
                            <option>Motorista</option>
                            <option>Programador(a)</option>
                            <option>Torneiro Mecânico</option>
                            <option>Copeiro(a)</option>
                            <option>Vice-presidente</option>
                        </select>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div>
                        <strong>
                            <label asp-for="CargoInstrucao" class="control-label"> </label>
                        </strong>
                        <select asp-for="CargoInstrucao" class="form-control">
                            <option selected>--- selecione ---</option>
                            <option>Ensino Fundamental</option>
                            <option>Segundo Grau Completo</option>
                            <option>Segundo Grau Técnico</option>
                            <option>Superior</option>
                            <option>Superior + Especialização</option>
                            <option>Mestrado</option>
                            <option>Doutorado</option>
                        </select>
                    </div>
                </div>

                <br />
                <div class="form-group">
                    <br />
                    <strong>
                        <input type="submit" value="Cadastrar" class="btn btn-primary" />  |
                        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                    </strong>
                </div>
            </div>

        </form>

    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
            integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
            crossorigin="anonymous"></script>


</body>

</html>
